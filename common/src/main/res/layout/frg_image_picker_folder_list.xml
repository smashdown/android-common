<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.smashdown.android.common.hsrecyclerview.HSRecyclerView
        android:id="@+id/mRvFolderList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        app:emptyString="No Image Folders"
        app:emptyLog="@drawable/ic_error_outline_white"
        app:enableRefreshEmptyView="false"

        app:failedString="No Image Folders"
        app:failedLogo="@drawable/ic_error_outline_white"
        app:enableRefreshFailedView="false"

        app:enableLoadMore="false"
        app:refreshItemCount="9999"
        app:enablePullToRefresh="false"/>/>
</RelativeLayout>
