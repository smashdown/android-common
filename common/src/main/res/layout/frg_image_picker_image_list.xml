<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.smashdown.android.common.ui.HSRecyclerView
        android:id="@+id/mRvImageList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        app:emptyString="No Image"
        app:emptyLog="@drawable/ic_error_outline_white"
        app:enableRefreshEmptyView="true"

        app:failedString="No Image"
        app:failedLogo="@drawable/ic_error_outline_white"
        app:enableRefreshFailedView="true"

        app:refreshItemCount="20"
        app:enableLoadMore="false"
        app:enablePullToRefresh="false"/>
</RelativeLayout>
