<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- GIF View -->
    <declare-styleable name="GifView">
        <attr name="gif" format="reference"/>
        <attr name="paused" format="boolean"/>
    </declare-styleable>
    <declare-styleable name="CustomTheme">
        <attr name="gifViewStyle" format="reference"/>
    </declare-styleable>

    <!-- Fixed Ratio RelativeLayout -->
    <declare-styleable name="FixedAspectRatioFrameLayout">
        <attr name="aspectRatioWidth" format="integer"/>
        <attr name="aspectRatioHeight" format="integer"/>
    </declare-styleable>

    <declare-styleable name="HSRecyclerView">
        <attr name="enablePullToRefresh" format="boolean"/>
        <attr name="enableLoadMore" format="boolean"/>

        <attr name="emptyString" format="string"/>
        <attr name="emptyLog" format="reference"/>
        <attr name="enableRefreshEmptyView" format="boolean"/>
        <attr name="emptyViewPaddingTop" format="dimension" />

        <attr name="failedString" format="string"/>
        <attr name="failedLogo" format="reference"/>
        <attr name="failedViewPaddingTop" format="dimension" />

        <attr name="enableRefreshFailedView" format="boolean"/>
        <attr name="refreshItemCount" format="integer"/>
    </declare-styleable>
</resources>